@model InputsModel;

<!--The Grade Calculator that shows grades based on inputs from the category list inputs-->
<h5>Grade Calculator</h5>
<p>Enter in your grade percentage (as a whole #) for the following categories:</p>
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="assignments" type="number" min="0" max="100" />
    <br />
    <label> Group Project: </label>
    <input id="groupProject" asp-for="groupProject" type="number" min="0" max="100" />
    <br />
    <label>Quizzes: </label>
    <input id="quizzes" asp-for="quizzes" type="number" min="0" max="100" />
    <br />
    <label>Midterm Exam: </label>
    <input id="midtermExam" asp-for="midtermExam" type="number" min="0" max="100" />
    <br />
    <label>Final Exam: </label>
    <input id="finalExam" asp-for="finalExam" type="number" min="0" max="100" />
    <br />
    <label>INTEX: </label>
    <input id="intex" asp-for="intex" type="number" min="0" max="100" />
    <br /><br />
    <input type="submit" id="btnSend" value="Send" /><br /><br />

    <!--Display of the calculted grades -->
    <p>Percentage Grade:</p>
    <p id="overallGrade"></p>
    <p>Letter Grade:</p>
    <p id="letterGrade"></p>

    <div asp-validation-summary="All"></div>
</form>

<script src="js/functions.js"></script>